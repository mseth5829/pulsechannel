<%=form_for post, remote: true, authenticity_token: true do |f|%>
  <%= f.label :your_post%>:
  <%= f.text_area :message, class: "form-control", data: {textarea: "post"}, id: "trythis"%>

  <%= f.hidden_field :pulsechannel_id, value: pulsechannel.id %>
  <%= f.submit "send", class: "btn btn-primary", data: {send: "post"}%>
<%end%>
