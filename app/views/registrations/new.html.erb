<div class="row">
  <div class="col-md-8 col-md-offset-2">
  <h2 id="log-in-title">Sign up</h2>
    <div class="auth-form well" id="logIn">
      <div class="row">
        <%= form_for(User.new, url: signup_path) do |f| %>
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">account_circle</i>
              <%= f.text_field :username, class: "icon_prefix"%>
              <label for="icon_prefix">Username</label>
            </div>
          </div>
          <div class="row">
            <div class= "col s12">
              <%= f.submit "sign up", class: "btn col s12" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <%= render partial: 'layouts/flash_errors'%>
  </div>
</div>
